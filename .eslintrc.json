{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "extends": [
    "standard",
    "standard-react"
  ],
  "rules": {
    "id-length": [1],
    "no-var": [1],
    "no-console": [1],
    "react/prop-types": [1],
    "no-debugger": "warn",
    "standard/no-callback-literal": [0]
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.8"
    }
  }
}